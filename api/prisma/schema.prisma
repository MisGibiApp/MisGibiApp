generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  passwordHash    String
  role            Role
  name            String
  profileImageUrl String?
  basePrice       Int?
  phone           String?  @unique
  gender          Gender?
  city            String?
  district        String?
  street          String?
  regions         Json?       // bölgeleri JSON array olarak saklıyoruz
  createdAt       DateTime @default(now())

  offersSent     Offer[] @relation("CustomerOffers")
  offersReceived Offer[] @relation("CleanerOffers")
}

model Offer {
  id        String   @id @default(cuid())
  price     Int
  note      String?
  createdAt DateTime @default(now())

  customer   User @relation("CustomerOffers", fields: [customerId], references: [id])
  customerId Int

  cleaner    User @relation("CleanerOffers", fields: [cleanerId], references: [id])
  cleanerId  Int
}

enum Role {
  customer
  cleaner
}

enum Gender {
  male
  female
}
